<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detailriwayat.view.BayarCicilanActivity">

    <View
        android:id="@+id/view_bayar_cicilan_topbar"
        android:background="#2A85F4"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/iv_bayar_cicilan_back"
        android:src="@drawable/ic_back"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginStart="16dp"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/view_bayar_cicilan_topbar"
        app:layout_constraintStart_toStartOf="@id/view_bayar_cicilan_topbar"
        app:layout_constraintBottom_toBottomOf="@id/view_bayar_cicilan_topbar" />

    <TextView
        android:id="@+id/tv_bayar_cicilan_topbar"
        android:text="Bayar"
        android:fontFamily="@font/roboto"
        android:textColor="#fff"
        android:textSize="20sp"
        android:layout_marginStart="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/iv_bayar_cicilan_back"
        app:layout_constraintTop_toTopOf="@id/view_bayar_cicilan_topbar"
        app:layout_constraintBottom_toBottomOf="@id/view_bayar_cicilan_topbar" />

    <View
        android:id="@+id/view_bayar_cicilan_bg"
        android:background="#2A85F4"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        app:layout_constraintTop_toBottomOf="@id/view_bayar_cicilan_topbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Spinner
        android:id="@+id/spinner_rencana_pesan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:spinnerMode="dropdown"
        android:drawSelectorOnTop="true"
        android:popupElevation="0dp"
        android:dropDownWidth="match_parent"
        android:popupBackground="@drawable/bg_rencana_pesan_spinner_item"
        android:background="@drawable/bg_rencana_pesan_spinner"
        app:layout_constraintTop_toTopOf="@id/view_bayar_cicilan_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/view_bayar_cicilan_bg_saldo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_bayar_cicilan_saldo"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/view_bayar_cicilan_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    
    <TextView
        android:id="@+id/tv_bayar_cicilan_saldo_note"
        android:text="Tagihan"
        android:fontFamily="@font/roboto"
        android:textColor="#474747"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@id/view_bayar_cicilan_bg_saldo"
        app:layout_constraintStart_toStartOf="@id/view_bayar_cicilan_bg_saldo"
        app:layout_constraintBottom_toBottomOf="@id/view_bayar_cicilan_bg_saldo" />

    <TextView
        android:id="@+id/tv_bayar_cicilan_saldo"
        android:text="Rp. Saldo"
        android:fontFamily="@font/roboto"
        android:textColor="#474747"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/view_bayar_cicilan_bg_saldo"
        app:layout_constraintEnd_toEndOf="@id/view_bayar_cicilan_bg_saldo"
        app:layout_constraintBottom_toBottomOf="@id/view_bayar_cicilan_bg_saldo" />

    <View
        android:id="@+id/view_bayar_cicilan_bot_bar"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/btn_bayar_cicilan"
        android:text="Konfirmasi"
        android:fontFamily="@font/roboto"
        android:textSize="16sp"
        android:textColor="#fff"
        android:textAllCaps="false"
        android:minHeight="0dp"
        android:background="@drawable/bg_konfirmasi_rencana_btn"
        android:paddingTop="8dp"
        android:paddingBottom="11dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>