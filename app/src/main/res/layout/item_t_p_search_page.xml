<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="304dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/SearchResult_Item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:background="@color/white"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        >

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:src="@drawable/ic_baseline_cancel_presentation_24"
            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/tv_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableStart="@drawable/ic_paperplane"
            android:drawablePadding="8dp"
            android:fontFamily="@string/font"
            android:text="Dummy"
            android:textColor="@color/gray"
            android:textSize="@dimen/text"
            app:layout_constraintTop_toBottomOf="@id/iv_image" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@string/font"
            android:text="Dummy Dummy"
            android:textColor="@color/black"
            android:textSize="@dimen/heading4"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tv_place" />

        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableStart="@drawable/ic_baseline_query_builder_24"
            android:drawablePadding="8dp"
            android:fontFamily="@string/font"
            android:text="Dummy"
            android:textColor="@color/gray"
            android:textSize="@dimen/text"
            app:layout_constraintTop_toBottomOf="@id/tv_title" />

        <TextView
            android:id="@+id/tv_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:drawableStart="@drawable/ic_baseline_directions_walk_24"
            android:drawablePadding="8dp"
            android:fontFamily="@string/font"
            android:text="Dummy"
            android:textColor="@color/gray"
            android:textSize="@dimen/text"
            app:layout_constraintTop_toBottomOf="@id/tv_duration" />

        <TextView
            android:id="@+id/tv_mulai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:fontFamily="@string/font"
            android:text="mulai"
            android:textColor="@color/gray"
            android:textSize="@dimen/text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_image" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@string/font"
            android:text="Rp 16.500.000"
            android:textColor="@color/orange"
            android:textSize="@dimen/heading4"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_mulai" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/grayblue"
        app:layout_constraintBottom_toBottomOf="@id/SearchResult_Item"
        />

</androidx.constraintlayout.widget.ConstraintLayout>