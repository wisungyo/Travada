<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/view_item_result_mutasi"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#EDEDED"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_item_result_mutasi_bulan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jul 2020"
        android:fontFamily="@font/roboto"
        android:textSize="16sp"
        android:textColor="#474747"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@id/view_item_result_mutasi"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_item_result_mutasi_inisial"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="WP"
        android:fontFamily="@font/roboto"
        android:textSize="16sp"
        android:textColor="#2A85F4"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/bg_item_result_mutasi"
        app:layout_constraintTop_toBottomOf="@id/tv_item_result_mutasi_bulan"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_item_result_mutasi_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wisnu Prasetyo"
        android:fontFamily="@font/roboto"
        android:textSize="16sp"
        android:textColor="#474747"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@id/tv_item_result_mutasi_inisial"
        app:layout_constraintStart_toEndOf="@id/tv_item_result_mutasi_inisial" />

    <TextView
        android:id="@+id/tv_item_result_mutasi_rekening"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12345678900"
        android:fontFamily="@font/roboto"
        android:textSize="14sp"
        android:textColor="#474747"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/tv_item_result_mutasi_inisial"
        app:layout_constraintBottom_toBottomOf="@id/tv_item_result_mutasi_inisial" />

    <TextView
        android:id="@+id/tv_item_result_mutasi_jumlah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ 1.000.000"
        android:fontFamily="@font/roboto"
        android:textSize="16sp"
        android:textColor="#43AC43"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/tv_item_result_mutasi_nama"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_item_result_mutasi_detail_tanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20 Juni 2020 - 16:37"
        android:fontFamily="@font/roboto"
        android:textSize="14sp"
        android:textColor="#474747"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_item_result_mutasi_rekening"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EDEDED"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_item_result_mutasi_inisial"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>