<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:clipToPadding="false"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_mainpage_item_tabungan"
        app:cardCornerRadius="8dp"
        android:elevation="16dp"
        android:layout_width="200dp"
        android:layout_height="155dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_mainpage_item_tabungan"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/gradation"
                android:scaleType="fitXY"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tv_mainpage_item_tabungan"
                android:text="Pulai Komodo 2020"
                android:fontFamily="@font/roboto"
                android:textSize="14sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/iv_mainpage_item_tabungan"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            
            <ProgressBar
                android:id="@+id/pg_mainpage_item_tebungan"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:max="100"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tv_mainpage_item_tabungan"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tv_mainpage_item_tabungan_pg_indikator"/>
            
            <TextView
                android:id="@+id/tv_mainpage_item_tabungan_pg_indikator"
                android:text="100%"
                android:fontFamily="@font/roboto"
                android:textSize="10sp"
                android:gravity="right"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/pg_mainpage_item_tebungan"
                app:layout_constraintBottom_toBottomOf="@id/pg_mainpage_item_tebungan"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>