<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listTransfer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvImagePersonTransaksi"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="14dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/ic_baseline_brightness_1_24"
        android:fontFamily="@font/roboto"
        android:gravity="center_vertical|center_horizontal"
        android:text="AB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvKegiatanTansaksi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Simpanan otomatis"
        android:textColor="#000"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/tvImagePersonTransaksi"
        app:layout_constraintStart_toEndOf="@id/tvImagePersonTransaksi"
        app:layout_constraintTop_toTopOf="@id/tvImagePersonTransaksi"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvTanggalTransaksi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="Rp. 2.000.000"
        android:textColor="#8e8e8e"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/tvKegiatanTansaksi"
        app:layout_constraintTop_toBottomOf="@id/tvKegiatanTansaksi" />


    <TextView
        android:id="@+id/tvJenisTransaksi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Tabungan"
        android:textColor="#8e8e8e"
        android:textSize="11sp"
        android:layout_marginEnd="17dp"
        app:layout_constraintBottom_toTopOf="@+id/vGaris"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvNominalTransaksi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="Rp. 1.000.000"
        android:paddingVertical="1dp"
        android:paddingHorizontal="17dp"
        android:textColor="@color/green"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/vGaris"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="34dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorBtnInactive"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNominalTransaksi" />

</androidx.constraintlayout.widget.ConstraintLayout>