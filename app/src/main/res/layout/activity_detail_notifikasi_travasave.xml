<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragmentnav.notifikasi.DetailNotifikasiTravasave">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gVertical1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="17dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gVertical2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="17dp" />

    <View
        android:id="@+id/barTabungan"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:background="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:src="@drawable/ic_baseline_arrow_back"
        app:layout_constraintBottom_toBottomOf="@id/barTabungan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Trava Save"
        android:textColor="@color/white"
        android:textSize="@dimen/heading3"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintTop_toTopOf="@id/btnBack" />

    <TextView
        android:id="@+id/tvDescNotifikasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto"
        android:text="Banbangk Slamet mengundang kamu ke dalam \nTrava save Pulau Komodo 2020 "
        android:textColor="@color/black"
        android:textSize="@dimen/heading4"
        app:layout_constraintStart_toStartOf="@id/gVertical1"
        app:layout_constraintTop_toBottomOf="@id/barTabungan"

        />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:theme="@style/Theme.MaterialComponents.Light"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="@id/gVertical2"
        app:layout_constraintStart_toStartOf="@id/gVertical1"
        app:layout_constraintTop_toBottomOf="@id/tvDescNotifikasi"
        app:strokeColor="@color/colorBtnInactive"
        app:strokeWidth="1dp">

        <ImageView
            android:id="@+id/imageWisata"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal|center_vertical|start"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_baseline_brightness_notifikasi" />

        <TextView
            android:id="@+id/tvNamaTempat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:layout_marginStart="96dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Pulau Komodo 2020"
            android:textColor="@color/black"
            android:textSize="@dimen/heading4" />

        <TextView
            android:id="@+id/tvBiaya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:layout_marginStart="96dp"
            android:layout_marginTop="44dp"
            android:fontFamily="@font/roboto"
            android:text="Rp. 10.000.000"
            android:textColor="@color/gray"
            android:textSize="@dimen/heading4" />

    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView3"
        android:layout_width="0dp"
        android:layout_height="113dp"
        android:layout_marginTop="16dp"
        android:theme="@style/Theme.MaterialComponents.Light"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="@id/gVertical2"
        app:layout_constraintStart_toStartOf="@id/gVertical1"
        app:layout_constraintTop_toBottomOf="@id/cardView"
        app:strokeColor="@color/colorBtnInactive"
        app:strokeWidth="1dp">

        <View
            android:id="@+id/garis"
            android:layout_width="370dp"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical|center_horizontal|bottom"
            android:layout_marginBottom="48dp"
            android:background="@color/colorBtnInactive" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/roboto"
            android:text="Perkiraan tanggal \npencapaian"
            android:textColor="@color/black"
            android:textSize="@dimen/heading4" />

        <TextView
            android:layout_width="31dp"
            android:layout_height="3dp"
            android:layout_gravity="top"
            android:layout_marginStart="16dp"
            android:layout_marginTop="36dp"
            android:text="Pencapaian"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:text="20 juni 2020"
            android:textColor="@color/blue"
            android:textSize="@dimen/heading3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:text="Rp. 2.000.000"
            android:textColor="@color/blue"
            android:textSize="@dimen/heading3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/roboto"
            android:text="Tabungan Bulanan"
            android:textColor="@color/black"
            android:textSize="@dimen/heading4" />


    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView4"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:theme="@style/Theme.MaterialComponents.Light"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="@id/gVertical2"
        app:layout_constraintStart_toStartOf="@id/gVertical1"
        app:layout_constraintTop_toBottomOf="@id/cardView3"
        app:strokeColor="@color/colorBtnInactive"
        app:strokeWidth="1dp">

        <TextView
            android:id="@+id/tvDescPerkiran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/roboto"
            android:text="Setoran Awal"
            android:textColor="@color/black"
            android:textSize="@dimen/text" />

        <TextView
            android:id="@+id/tvPerkiranTabungan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_horizontal|center_vertical"
            android:layout_marginEnd="16dp"
            android:text="Rp. 1.000.000"
            android:textColor="@color/blue"
            android:textSize="@dimen/heading4" />

    </com.google.android.material.card.MaterialCardView>


    <Button
        android:id="@+id/btnTolak"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="156dp"
        android:layout_height="40dp"
        android:layout_marginBottom="26dp"
        android:background="@drawable/bg_active_outline"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/roboto"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="Tolak"
        android:textAllCaps="false"
        android:textColor="@color/blue"
        android:textSize="@dimen/heading3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/gVertical1" />

    <Button
        android:id="@+id/btnGabung"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="156dp"
        android:layout_height="40dp"
        android:layout_marginBottom="26dp"
        android:background="@drawable/bg_active"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/roboto"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="Gabung"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/heading3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/gVertical2" />

