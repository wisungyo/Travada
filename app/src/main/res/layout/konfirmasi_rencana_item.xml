<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_konfirmasi_rencana_item"
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@drawable/bg_rencana_pesan_jumlah_orang"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_konfirmasi_rencana_item_img"
                android:background="@drawable/ic_akun_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_konfirmasi_rencana_item_name"
                android:text="Orang 1"
                android:fontFamily="@font/roboto"
                android:textSize="14sp"
                android:textColor="#474747"
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_konfirmasi_rencana_item_img" />

            <ImageView
                android:id="@+id/iv_konfirmasi_rencana_item_check"
                android:background="@drawable/ic_check_green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/iv_konfirmasi_rencana_item_arrow"
                app:layout_constraintEnd_toStartOf="@id/iv_konfirmasi_rencana_item_arrow"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/iv_konfirmasi_rencana_item_arrow"
                android:background="@drawable/ic_next_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tv_konfirmasi_rencana_item_name_checked"
                android:text="Orang 1"
                android:fontFamily="@font/roboto"
                android:textSize="14sp"
                android:textColor="#474747"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_konfirmasi_rencana_item_name"
                app:layout_constraintStart_toStartOf="parent"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_konfirmasi_rencana_item_nomor_note"
                android:text="Nomor HP"
                android:fontFamily="@font/roboto"
                android:textSize="12sp"
                android:textColor="#777777"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_konfirmasi_rencana_item_name_checked"
                app:layout_constraintStart_toStartOf="@id/tv_konfirmasi_rencana_item_name_checked"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_konfirmasi_rencana_item_nomor"
                android:text="0856325"
                android:fontFamily="@font/roboto"
                android:textSize="12sp"
                android:textColor="#777777"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/tv_konfirmasi_rencana_item_nomor_note"
                app:layout_constraintEnd_toEndOf="parent"
                android:visibility="gone"  />

            <TextView
                android:id="@+id/tv_konfirmasi_rencana_item_email_note"
                android:text="Email"
                android:fontFamily="@font/roboto"
                android:textSize="12sp"
                android:textColor="#777777"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_konfirmasi_rencana_item_nomor_note"
                app:layout_constraintStart_toStartOf="@id/tv_konfirmasi_rencana_item_nomor_note"
                android:visibility="gone"  />

            <TextView
                android:id="@+id/tv_konfirmasi_rencana_item_email"
                android:text="orang@gmail.com"
                android:fontFamily="@font/roboto"
                android:textSize="12sp"
                android:textColor="#777777"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/tv_konfirmasi_rencana_item_email_note"
                app:layout_constraintEnd_toEndOf="parent"
                android:visibility="gone"  />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        app:layout_constraintTop_toBottomOf="@id/cv_konfirmasi_rencana_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>