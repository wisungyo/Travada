<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/view_detail_riwayat_item_card"
        android:background="@drawable/bg_detail_riwayat_item_card"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_width="match_parent"
        android:layout_height="163dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_detail_riwayat_item_title"
        android:text="DP"
        android:fontFamily="@font/roboto"
        android:textSize="14sp"
        android:textColor="#474747"
        android:maxLines="1"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/view_detail_riwayat_item_card"
        app:layout_constraintStart_toStartOf="@id/view_detail_riwayat_item_card"
        app:layout_constraintEnd_toEndOf="@id/view_detail_riwayat_item_card" />

    <TextView
        android:id="@+id/tv_detail_riwayat_item_jumlah_note"
        android:text="Jumlah"
        android:fontFamily="@font/roboto"
        android:textSize="12sp"
        android:textColor="#777777"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_riwayat_item_title"
        app:layout_constraintStart_toStartOf="@id/tv_detail_riwayat_item_title" />

    <TextView
        android:id="@+id/tv_detail_riwayat_item_jumlah"
        android:text="Rp. 4,500,000"
        android:fontFamily="@font/roboto"
        android:textSize="12sp"
        android:textColor="#777777"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tv_detail_riwayat_item_jumlah_note"
        app:layout_constraintEnd_toEndOf="@id/tv_detail_riwayat_item_title" />

    <TextView
        android:id="@+id/tv_detail_riwayat_item_tempo_note"
        android:text="Jatuh Tempo"
        android:fontFamily="@font/roboto"
        android:textSize="12sp"
        android:textColor="#777777"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_riwayat_item_jumlah_note"
        app:layout_constraintStart_toStartOf="@id/tv_detail_riwayat_item_title" />

    <TextView
        android:id="@+id/tv_detail_riwayat_item_tempo"
        android:text="09 Juli 2020"
        android:fontFamily="@font/roboto"
        android:textSize="12sp"
        android:textColor="#777777"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tv_detail_riwayat_item_tempo_note"
        app:layout_constraintEnd_toEndOf="@id/tv_detail_riwayat_item_title" />

    <TextView
        android:id="@+id/tv_detail_riwayat_item_status_note"
        android:text="Status"
        android:fontFamily="@font/roboto"
        android:textSize="12sp"
        android:textColor="#777777"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_riwayat_item_tempo_note"
        app:layout_constraintStart_toStartOf="@id/tv_detail_riwayat_item_title" />

    <TextView
        android:id="@+id/tv_detail_riwayat_item_status"
        android:text="Menunggu Pembayaran"
        android:fontFamily="@font/roboto"
        android:textSize="12sp"
        android:textColor="#777777"
        android:background="@drawable/bg_detail_riwayat_item_status_yellow"
        android:paddingTop="2dp"
        android:paddingBottom="4dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tv_detail_riwayat_item_status_note"
        app:layout_constraintEnd_toEndOf="@id/tv_detail_riwayat_item_title" />

    <Button
        android:id="@+id/btn_detail_riwayat_item"
        android:text="Bayar"
        android:textColor="#fff"
        android:fontFamily="@font/roboto"
        android:textSize="12sp"
        android:background="@drawable/bg_detail_riwayat_item_btn"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingTop="6dp"
        android:paddingBottom="8dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textAllCaps="false"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_riwayat_item_status_note"
        app:layout_constraintStart_toStartOf="@id/tv_detail_riwayat_item_title" />

</androidx.constraintlayout.widget.ConstraintLayout>