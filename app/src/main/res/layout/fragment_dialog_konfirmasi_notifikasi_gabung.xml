<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentnav.notifikasi.view.DialogKonfirmasiNotifikasiGabung">

    <TextView
        android:id="@+id/tv_dialog_gabung_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="Title"
        android:textColor="#2A85F4"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_dialog_gabung_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="Subtitle"
        android:textColor="#474747"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_dialog_gabung_title" />

    <View
        android:id="@+id/view_dialog_konfirmasi_horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EDEDED"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tv_dialog_gabung_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/view_dialog_konfirmasi_vertical"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="#EDEDED"
        app:layout_constraintTop_toBottomOf="@id/view_dialog_konfirmasi_horizontal"
        app:layout_constraintStart_toStartOf="@id/view_dialog_konfirmasi_horizontal"
        app:layout_constraintEnd_toEndOf="@id/view_dialog_konfirmasi_horizontal"
        app:layout_constraintBottom_toBottomOf="@id/btn_dialog_gabung_btn_yes"/>

    <TextView
        android:id="@+id/btn_dialog_gabung_btn_no"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="Batalkan"
        android:textColor="#777777"
        android:textSize="18sp"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/view_dialog_konfirmasi_vertical"
        app:layout_constraintTop_toBottomOf="@id/view_dialog_konfirmasi_horizontal" />

    <TextView
        android:id="@+id/btn_dialog_gabung_btn_yes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="Lanjutkan"
        android:textColor="#2A85F4"
        android:textSize="18sp"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="15dp"
        app:layout_constraintStart_toEndOf="@id/view_dialog_konfirmasi_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_dialog_konfirmasi_horizontal" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.50" />

</androidx.constraintlayout.widget.ConstraintLayout>