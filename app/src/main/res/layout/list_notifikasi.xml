<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listNotifikasi"
    android:layout_width="match_parent"
    android:layout_height="105dp">

    <View
        android:id="@+id/viewNotifikasi"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_touch"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/tvImagePersonTransaksi"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/ic_baseline_brightness_notifikasi"
        android:fontFamily="@font/roboto"
        android:gravity="center_vertical|center_horizontal"
        android:src="@drawable/ic_notif_tsave"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvJudulNotifikasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Simpanan otomatis"
        android:textColor="#000"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/tvImagePersonTransaksi"
        app:layout_constraintStart_toEndOf="@id/tvImagePersonTransaksi"
        app:layout_constraintTop_toTopOf="@id/tvImagePersonTransaksi"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvPesanNotifikasi"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="pesan"
        android:textColor="#474747"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/tvJudulNotifikasi"
        app:layout_constraintTop_toBottomOf="@id/tvJudulNotifikasi" />

    <TextView
        android:id="@+id/tvTanggalNotifikasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="27-06-2020, 09:34"
        android:textColor="#8e8e8e"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/tvPesanNotifikasi"
        app:layout_constraintTop_toBottomOf="@id/tvPesanNotifikasi" />

    <View
        android:id="@+id/garis"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="34dp"
        android:background="@color/colorBtnInactive"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>