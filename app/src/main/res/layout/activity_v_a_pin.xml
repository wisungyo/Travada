<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.transfer.va.VAPinActivity"
    android:background="@color/white"
    >

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_back_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="22dp"/>

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:fontFamily="@string/font"
        android:text="Masukkan PIN Anda"
        android:textColor="@color/black"
        android:textSize="@dimen/heading2"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_image" />


    <com.chaos.view.PinView
        android:id="@+id/PinView"
        style="@style/PinWidget.PinView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:cursorVisible="false"
        android:inputType="numberPassword"
        android:itemBackground="@drawable/ic_baseline_circle_gray"
        android:textColor="@color/blue"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="5dp"
        app:hideLineWhenFilled="true"
        app:itemCount="6"
        app:itemHeight="10dp"
        app:itemRadius="4dp"
        app:itemSpacing="30dp"
        app:itemWidth="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:lineColor="@color/white"
        app:lineWidth="0dp"
        app:viewType="rectangle"
        android:maxLength="6"
        />

    <TextView
        android:id="@+id/tv_err"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@string/font"
        android:text="error message"
        android:textColor="@color/rederror"
        android:textSize="@dimen/heading4"
        app:layout_constraintTop_toBottomOf="@id/PinView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="21dp"
        android:visibility="invisible"
        />


    <com.example.numpad.NumPad
        android:id="@+id/numpad"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/PinView"
        android:layout_margin="42dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>