<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cl_mainpage_item_trip"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipToPadding="false"
    android:paddingBottom="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_mainpage_item_trip"
        android:layout_marginStart="16dp"
        app:cardCornerRadius="8dp"
        android:elevation="16dp"
        android:layout_width="280dp"
        android:layout_height="185dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_mainpage_item_trip"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tv_mainpage_item_trip_title"
                android:text="Tokyo &amp; Mount Fuji"
                android:textSize="16sp"
                android:maxLines="1"
                android:fontFamily="@font/roboto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                app:layout_constraintTop_toBottomOf="@id/iv_mainpage_item_trip"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_mainpage_item_trip_mulai"
                android:text="Mulai"
                android:fontFamily="@font/roboto"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginStart="12dp"
                app:layout_constraintTop_toBottomOf="@id/tv_mainpage_item_trip_title"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_mainpage_item_trip_money"
                android:text="Rp. 16.500.000"
                android:fontFamily="@font/roboto"
                android:textSize="14sp"
                android:textColor="#C8582B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                app:layout_constraintTop_toBottomOf="@id/tv_mainpage_item_trip_mulai"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_mainpage_item_trip_day"
                android:text="5 hari"
                android:fontFamily="@font/roboto"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                app:layout_constraintTop_toBottomOf="@id/tv_mainpage_item_trip_mulai"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/iv_mainpage_item_trip_clock"
                android:src="@drawable/ic_clock"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="1dp"
                app:layout_constraintTop_toTopOf="@id/tv_mainpage_item_trip_day"
                app:layout_constraintBottom_toBottomOf="@id/tv_mainpage_item_trip_day"
                app:layout_constraintEnd_toStartOf="@id/tv_mainpage_item_trip_day"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>